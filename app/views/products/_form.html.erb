<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "erro") %>:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Nome' %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :image, 'Imagem' %><br>
    <%= f.text_field :image %>
  </div>
  <div class="field">
    <%= f.label :garbage_id, 'ClassificaÃ§Ã£o do lixo' %><br>
    <%= f.collection_select :garbage_id, Garbage.all, :id, :name %>
  </div>
  <div class="actions">
    <%= f.submit "Salvar" %> ou <%= link_to 'Voltar', products_path, :class => 'cancel' %>
  </div>
<% end %>
